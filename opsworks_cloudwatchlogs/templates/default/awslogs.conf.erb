[general]
state_file = <%= @state_file %>

<% @cloudwatchlogs.each do |layer_name, layer_logs| %>
<% layer_logs.each do |log| %>
<% if log["file"] == "AGENT"
  log_path = node["cloudwatchlogs"]["AGENT_LOGS"]
elsif log["file"] == "CHEF"
  log_path = node["cloudwatchlogs"]["CHEF_LOGS"]
else
  log_path = log["file"]
end %>
[<%= layer_name %> <%= log_path %>]
datetime_format = [%Y-%m-%d %H:%M:%S]
log_group_name = <%= layer_name %>
log_stream_name = <%= @hostname %> - <%= log_path %>
initial_position = start_of_file
file = <%= log_path %>

<% end %>
<% end %>
